-# 固定する
.group-header
  .group-top-header
    .group-top-header__icon
      = link_to root_path do
        %i.fas.fa-gamepad
    .group-top-header__homeicon
      =link_to "#" do
        =image_tag asset_path('')
    .group-top-header__form
      .group-search-form
        %form{:action => "/", :method => "post", class:"search-area"}
          %input{type:"text", placeholder: "調べたいグループを入力してください", class:"input-area"}
    .group-top-header__myicon
      =link_to "#" do
        =image_tag asset_path('')
  .group-information-backgroud
    -# バックグラウンドのイメージを入れる
    .group-information-form
      .group-information-form__icon
        =link_to "#" do
          =image_tag asset_path('')
      .group-information-form__text
        .group-information-form__text__header
          =link_to new_group_path , class: "create-group-path" do
            %p.group-gametitle グループ作成

  .group-nav
    .group-nav__chat
      %p 新作ゲーム
    .group-nav__summary
      %p 人気のゲーム
    .group-nav__information
      %p 完全無料アプリ


.group-main 
  .group-list
    - @groups.each do |group|
      -# %figure.group--img
      -#   = image_tag group.image.image.url
      .group
        = link_to group_messages_path(group) do
          %h3.name 
            = group.name
          .group__message
            メッセージはまだありません。
