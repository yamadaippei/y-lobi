.login-user-pages
  .login-user-page
    .login-user-page__inner.clearfix
      %h2.login-text-message ログイン
      %h5.logintext-info 登録しているユーザーでログイン
      = render "devise/shared/links"
    .login-user-page__inner.user-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email, autofocus: true
          .field
            .field-label
              = f.label :password
              %i (英数字8文字以上)
            .field-input
              = f.password_field :password, autocomplete: "off"
          .actions
            = f.submit "ログイン", class: 'btn'
